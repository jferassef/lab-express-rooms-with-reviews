<div class="container">
  <h1>Rooms </h1>
  {{#each rooms}}
    <div class="room-row">
      <a href="/rooms/{{this._id}}">{{this.name}}</a>
      <div class="action-links">
        {{#if ../isLoggedIn}}
          <a href="/rooms/{{this._id}}/edit" class="btn btn-dark">Edit</a>
        {{/if}}
        <form action="/rooms/{{this._id}}/delete" method="post">
          <button type="submit" class="btn btn-warning">Delete</button>
        </form>
      </div>
    </div>
  {{/each}}
</div>