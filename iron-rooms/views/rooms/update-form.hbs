
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit Room</h1>
            <hr>
            <form action="/rooms/{{_id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="title" name="name" value="{{name}}">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" id="description" name="description" value="{{description}}" >
                </div>

                <div class="mb-3">
                    <label for="imageUrl" class="form-label">Image Link</label>
                    <input type="text" class="form-control" id="imageUrl" name="imageUrl" value="{{imageUrl}}">
                </div>

                <button type="submit" class="btn btn-dark">Update Room</button>
                <a href="/rooms" class="btn btn-dark">Go back</a>
            </form>
            <hr>
        </div>
    </div>
</div>